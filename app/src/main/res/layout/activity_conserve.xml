<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/yanghu_login_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar">

        <Button
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="养护上报"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/yanghu_login_top_layout">

        <TextView
            android:id="@+id/yanghufangxiang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="养护方向："
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/yanghuspinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yanghufangxiang"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_editbox"
            android:drawSelectorOnTop="true"
            android:hint=""
            android:prompt="@string/yanghuspinner"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/chedaoweizhi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yanghuspinner"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="车道位置："
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/chedaospinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chedaoweizhi"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_editbox"
            android:drawSelectorOnTop="true"
            android:hint=""
            android:prompt="@string/chedaospinner"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bingduleixing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chedaospinner"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="道路状况："
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/bingduspinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bingduleixing"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_editbox"
            android:drawSelectorOnTop="true"
            android:hint=""
            android:prompt="@string/bingduspinner"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/bingduspinner"
            android:layout_below="@+id/bingduspinner"
            android:layout_marginTop="29dp"
            android:background="@drawable/btn_style_green"
            android:text="发送"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
